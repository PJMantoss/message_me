<h2 class="ui center aligned medium icon header">
  Welcome to MessageMe - <em>a complete Chat App</em>
  <i class="circular orange key icon"></i>
  Sign Up!
</h2>

<div class="ui raised container">
<div class="row center">
<div class="ui centered card">
  <div class="content">
<%= form_for(@user, html: {class: "ui form"}) do |f| %>

    <div class="twelve wide field">
        <%= f.label :username %>
        <%= f.text_field :username, placeholder: "Choose a username" %>
    </div>

    <div class="twelve wide field">
        <%= f.label :password %>
        <%= f.password_field :password, placeholder: "Choose your password" %>
    </div>

    <%= f.submit "Sign up", class: "ui primary button" %>

<% end %>
</div>
</div>
</div>
</div>